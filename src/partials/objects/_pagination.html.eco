<% if @hasPrevPage() || @hasNextPage(): %>

  <ul class="article-list__nav-list">

    <% if @hasNextPage(): %><li class="article-list__nav-list__item"><a href="<%= @getNextPage() %>" class="article-list__nav-list__link">older articles</a></li><% end %>

    <% if @hasPrevPage(): %><li class="article-list__nav-list__item"><a href="<%= @getPrevPage() %>" class="article-list__nav-list__link">newer articles</a></li><% end %>

  </ul>

<% end %>
