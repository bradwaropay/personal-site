<article class="post-item">

  <header class="post-item__header">

    <time datetime="<%= @postRobotDate %>" class="post-item__date"><%= @postHumanDate %></time>

    <h2 class="post-item__title"><a href="<%= @postUrl %>" class="post-item__link" data-viewport-target="<%= @document.siteNavOrder + 1 %>"><%= @postTitle %></a></h2>

  </header>

  <p class="post-item__description"><%= @postDescription %></p>

</article>
