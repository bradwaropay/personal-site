<nav class="site-nav <%= @document.section %>">
  <a href="/" class="logo"></a>
  <ul>
    <% for page in @getCollection("navLinks").sortArray('title':0): %>
      <li class="<%= if page.section is @document.section then 'active' else 'inactive' %>">
        <a href="<%= page.url %>">
          <%= page.title %>
        </a>
      </li>
    <% end %>
  </ul>
</nav>
